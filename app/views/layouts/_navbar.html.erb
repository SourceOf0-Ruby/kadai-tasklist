<header>
  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
      
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
          <span class="sr-only">Toggle navigation</span><!-- 音声読み上げのみで、画面には表示しない -->
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">TaskList</a>
      </div><!-- navbar-header -->
    
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to new_task_path do %>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 新規タスク追加
              <% end %>
            </li>
            <li class="dropdown">
              <%# role="button" aria-haspopup="true" aria-expanded="false" はWAI-ARIAでbootstrapではない %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" >
                <%= current_user.name %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'ユーザ作成', signup_path %></li>
            <li><%= link_to 'ログイン', login_path %></li>
          <% end %>
        </ul>
      </div><!-- .navbar-collapse -->
      
    </div><!-- .container-fluid -->
  </nav>
</header>