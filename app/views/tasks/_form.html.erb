<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">

    <%= form_for(task) do |t| %>
      
      <%# エラー出力 %> 
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |m| %>
              <li><%= m %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%# フォーム %>
      <div class="form-group">
        <%= t.label :status, '状態' %>
        <%= t.select :status, ["新規", "未着手", "着手", "遅延", "保留", "取消", "完了"], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= t.label :content, '内容' %>
        <%= t.text_field :content, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= t.submit '反映', class: 'btn btn-primary' %>
      </div>
    <% end %>
    
  </div><!-- col-xs-* -->
</div><!-- row -->
