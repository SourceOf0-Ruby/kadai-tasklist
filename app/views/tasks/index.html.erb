<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <tr>
      <th>id</th>
      <th>状態</th>
      <th>タイトル</th>
    </tr>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.status %></td>
        <td><%= task.title %></td>
      </tr>
    <% end %>
  </table>
  
  <div>
    <%= paginate @tasks %>
  </div>
<% else %>
  <p>タスクが登録されていません</p>
<% end %>

<%= link_to 'タスクを追加する', new_task_path, class: 'btn btn-primary' %>
